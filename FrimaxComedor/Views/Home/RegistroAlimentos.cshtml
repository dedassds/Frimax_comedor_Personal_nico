
@{
    ViewData["Title"] = "RegistroAlimentos";
}

<h1>@ViewData["Title"]</h1>


<div class="accordion" id="accordionExample">

	<div class="accordion-item">
		<h2 class="accordion-header">
			<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
				Registro de alimentos
			</button>
		</h2>
		<div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
			<div class="accordion-body">
				<div class="container container-fluid border-1">
					<div class="mb-4"></div>
					<div class="custom-table">
						<!-- Encabezado -->
						<div class="custom-row">
							<div class="custom-cell custom-day">Numero de empleado</div>
							<div class="custom-cell custom-day">Nombre de empleado</div>
							<div class="custom-cell custom-day">Fecha de pedido</div>


						</div>

						<div class="custom-row">
							<div class="custom-cell">
								<select class="form-select" aria-label="Default select example">
									<option selected>Numero de empleado</option>
									<option value="1">1154020</option>
								</select>
							</div>
							<div class="custom-cell">
								<select class="form-select" aria-label="Default select example">
									<option selected>Nombre de empleado</option>
									<option value="1">Efrain Gutierrez Prado</option>
								</select>
							</div>
							<div class="custom-cell">
								<select class="form-select" aria-label="Default select example">
									<option selected>Fecha de pedido</option>
									<option value="1">29/08/2023 - 7:45:00 Am</option>
								</select>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
	/* Estilos para la tabla */
	.custom-table {
		width: 100%;
	}

	.custom-row {
		display: flex;
		border: 1px solid #ddd;
	}

	.custom-cell {
		flex: 1;
		display: flex; /* Agregamos esto para centrar verticalmente */
		justify-content: center; /* Centramos horizontalmente */
		align-items: center; /* Centramos verticalmente */
		padding: 8px;
		border-left: 1px solid #ddd;
	}

	/* Estilos para los días */
	.custom-day {
		font-weight: bold;
	}

	.Listado_comida {
		display: flex;
	}


	/* Estilos para las celdas editables */
	[contenteditable="true"] {
		border: 1px solid #ddd;
		padding: 4px;
	}
</style>

